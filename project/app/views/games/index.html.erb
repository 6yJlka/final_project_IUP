<div class="row">
  <% @games.each_slice(3) do |game_row| %>
    <div class="row">
      <% game_row.each do |game| %>
        <div class="col-md-4">
          <div class="game">
            <div class="image_wrapper">
              <%= link_to game do %>
                <%= image_tag game.image.url(:medium) %>
              <% end %>
            </div>
            <h2><%= link_to game.title, game %></h2>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
